    "formatting": {
      "id": "formatting",
      "speaker": "Guide",
      "text": "You can make text [b]bold[/b], [i]italic[/i], or [s]strikethrough[/s]. You can also add [color=red]colors[/color] to your text!",
      "emotion": "happy",
      "choices": [
        {
          "id": "choice_4",
          "text": "That's cool! What else?",
          "nextNodeId": "formatting2"
